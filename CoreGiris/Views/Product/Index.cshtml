@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>ÜrünAdı</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
              @for (int i = 0; i < Model.Count; i++)
              {
                  var item = Model[i];
                 <tr>
                     <th scope="row">
                         @(i+1)
                     </th>
                     <td>(@item.ProductName)</td>
                     <td>(@item.UnitPrice)</td>
                 </tr>
              }
            </tbody>
        </table>
    </div>
</div>
</div>